{
	"name": "Pixel Talk",
	"version": "0.1",
	"description": "Let's talk about the pixels in this page",
	"homepage_url": "http://moraga.com.br/pixeltalk",
	"manifest_version": 2,
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*", "file://*/*"],
		"js": ["content.js"]
	}],
	"permissions": [
		"http://moraga.com.br/"
	]
}